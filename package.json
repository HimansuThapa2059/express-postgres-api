{
  "name": "express-postgres",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon ./src/server.ts",
    "start": "node ./dist/server.js",
    "build": "tsc --build",
    "db:start": "docker-compose up -d db",
    "db:stop": "docker-compose down",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:reset": "docker-compose down -v && docker-compose up -d db  && bunx drizzle-kit push",
    "setup": "bun install && bun run db:start && bun run db:push",
    "clean": "rm -rf dist && tsc --build --clean"
  },
  "dependencies": {
    "@types/pg": "^8.15.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "pg": "^8.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.21",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
